#include <stdio.h>

int main() {
float salary, bonus, totalSalary;
  scanf("%f", &salary);
 if (salary >= 50000) {
    bonus = salary * 0.20;
    }
    else if (salary >= 30000) {
        bonus = salary * 0.10;
    }
    else {
        bonus = salary * 0.05;
    }

    totalSalary = salary + bonus;

    printf("Bonus: %.2f\n", bonus);
    printf("Total Salary after Bonus: %.2f\n", totalSalary);

    return 0;
}
