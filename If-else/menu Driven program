#include <stdio.h>
int main() {
int choice;
int a,b;
printf("1. addition \n2.subtraction\n3.multiplication\n4.divide\n");
scanf("%d",&choice);
scanf("%d %d",&a,&b);
switch (choice){
    case 1:
    printf("sum = %d",a+b);
    break;
    case 2:
    printf("difference = %d",a-b);
    break;
    case 3:
    printf("product = %d",a*b);
    break;
    case 4:
    if(b==0){
        printf("cant be divided by zero");
    }
    else{
    printf("divide= %d",a/b);
    }
    break;

default:
printf("invalid number give between 1-4");
}
return 0;
}
